mixin services-article(image, caption, text)
    article
        img(src=image.url alt=image.alt)
        h2= caption
        p= text
mixin featured-article(caption, content, image, name, date)
    div.article
        h3=caption
        p=content
        div.author
            img(src=image.url alt=image.alt)
            div.author-content
                p=name
                p=date
mixin facts(number,name)
    li
        p=number
        div
        p=name
mixin blog-content(timestamp, capture, text, imageurl)
    div.content
        p=timestamp
        h2=capture
        p=text
    img(src=imageurl alt='article image')

